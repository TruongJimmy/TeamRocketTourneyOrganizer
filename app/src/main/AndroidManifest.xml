        <activity
            android:name=".QRCodeActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".TaskActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="nosensor">
